<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/nav_branches">

    <fragment
        android:id="@+id/nav_branches"
        android:name="com.digitalcity.apteki.ui.branches.branchesMain.BranchesFragment"
        tools:layout="@layout/fragment_branches">
        <action
            android:id="@+id/action_nav_branches_to_nav_newBranches"
            app:destination="@id/nav_newBranches" />
        <action
            android:id="@+id/action_nav_branches_to_nav_branches_info"
            app:destination="@id/nav_branches_info" />
    </fragment>

    <fragment
        android:id="@+id/nav_branches_info"
        android:name="com.digitalcity.apteki.ui.branches.branchesInner.BranchesInnerFragment"
        tools:layout="@layout/fragment_inner_branch">

        <action
            android:id="@+id/action_nav_dashboard_to_invoiceFragment"
            app:destination="@id/nav_invoice_stats" />
        <action
            android:id="@+id/action_nav_branches_info_to_nav_trade_stats"
            app:destination="@id/nav_trade_stats" />
        <action
            android:id="@+id/action_nav_branches_info_to_nav_employee_info"
            app:destination="@id/nav_employee_info" />
    </fragment>

    <fragment
        android:id="@+id/nav_newBranches"
        android:name="com.digitalcity.apteki.ui.branches.branchesMain.NewBranches"
        tools:layout="@layout/fragment_new_branches" >
        <action
            android:id="@+id/action_nav_newBranches_to_mapFragment"
            app:destination="@id/mapFragment" />
    </fragment>
    <fragment
        android:id="@+id/nav_logIn"
        android:name="com.digitalcity.apteki.ui.login.LogInFragment"
        android:label="fragment_log_in"
        tools:layout="@layout/fragment_log_in">
        <action
            android:id="@+id/action_nav_logIn_to_nav_branches"
            app:destination="@id/nav_branches"
            app:popUpTo="@id/nav_logIn"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/nav_trade_stats"
        android:name="com.digitalcity.apteki.ui.branches.branchesInner.trade.TradeStatisticsFragment"
        android:label="fragment_trade_statistics"
        tools:layout="@layout/fragment_trade_statistics" />
    <fragment
        android:id="@+id/nav_invoice_stats"
        android:name="com.digitalcity.apteki.ui.branches.branchesInner.invoice.InvoiceFragment"
        android:label="InvoiceFragment" />
    <fragment
        android:id="@+id/nav_employee_info"
        android:name="com.digitalcity.apteki.ui.branches.branchesInner.employee.info.EmployeeInfoFragment"
        android:label="BranchInfoFragment">
        <action
            android:id="@+id/action_nav_branch_info_to_employeeAddFragment"
            app:destination="@id/nav_add_employee" />
    </fragment>
    <fragment
        android:id="@+id/nav_add_employee"
        android:name="com.digitalcity.apteki.ui.branches.branchesInner.employee.EmployeeAddFragment"
        android:label="fragment_employee_add"
        tools:layout="@layout/fragment_employee_add" />
    <fragment
        android:id="@+id/nav_dashboard"
        android:name="com.digitalcity.apteki.ui.charts.ChartsFragment"
        android:label="fragment_charts"
        tools:layout="@layout/fragment_charts" />
    <fragment
        android:id="@+id/mapFragment"
        android:name="com.digitalcity.apteki.ui.map.MapFragment"
        android:label="MapFragment" />
</navigation>